{
    "name": "@eeue56/baner",
    "version": "1.0.0",
    "description": "Flag parsing library in Typescript",
    "type": "module",
    "main": "build/baner.mjs",
    "types": "build/baner.d.ts",
    "exports": {
        "types": "./build/baner.d.ts",
        "require": "./build/baner.cjs",
        "import": "./build/baner.mjs"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && npm run build-cjs && npm run build-mjs",
        "build-cjs": "npx esbuild --bundle src/baner.ts --outfile=build/baner.cjs --platform=node",
        "build-mjs": "npx esbuild --bundle src/baner.ts --outfile=build/baner.mjs --platform=node --format=esm",
        "test": "tsc --noEmit && npx @eeue56/bach && cd example && tsc --noEmit",
        "format": "npx prettier --write .",
        "docs": "npx @eeue56/geiriadur"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eeue56/baner.git"
    },
    "keywords": [
        "typescript",
        "hiraeth"
    ],
    "author": "eeue56",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/eeue56/baner/issues"
    },
    "homepage": "https://github.com/eeue56/baner#readme",
    "devDependencies": {
        "@eeue56/bach": "^1.0.0",
        "@eeue56/geiriadur": "^0.0.3",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "esbuild": "^0.27.2"
    }
}
